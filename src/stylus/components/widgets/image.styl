.component-input-image
  background transparent

  .image-container
    position relative
    width 100%
    padding-top 66%
    overflow hidden
    background transparent


  .image-container img
    position absolute
    top 0
    left 0
    object-fit cover
    width 100%
    height 100%
    opacity 1.0
    background-color rgba(255, 255, 255, 0.4)
    transition opacity 0.15s ease-in-out


  .image-container input
    position absolute
    top 0
    left 0
    opacity 0.0
    pointer-events none


  .image-container .button-container
    position absolute
    top 0
    left 0
    width calc(100% - 20px)
    height calc(100% - 20px)
    margin 10px
    border-radius 4px
    background-color rgba(0, 0, 0, 0.0)

    display flex
    flex-direction row
    flex-wrap wrap
    justify-content center
    align-items center
    transition background-color 0.15s ease-in-out


  &.dragging-file .image-container .button-container button
    pointer-events none

  &.dragging-file .image-container img, & .image-container:hover img
    opacity 0.66

  .image-container .button-container button
    margin 0 10px
    border 0
    background-color white
    color var(--primary-color)
