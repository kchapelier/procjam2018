main header
  position relative
  flex 0 0 100%
  height 40px
  border-top 13px solid var(--primary-dark)
  border-bottom 1px solid var(--primary-light)
  background var(--primary)
  color var(--primary-text)
  cursor default

  h1
    padding 0 0 0 15px
    margin 0
    font-weight bold
    font-size 20px
    line-height 40px
    display inline-block

    span
      font-size 13px
      font-weight normal

  .buttons
    position absolute
    top 0
    right 15px

    a, button
      display inline-block
      align-items flex-start
      text-align center
      box-sizing border-box
      border 0
      width 32px
      height 40px
      line-height 32px
      padding 0
      margin 0
      background transparent
      font-size 16.5px !important
      color var(--primary-text)
      cursor pointer
      transition color 0.1s ease-in-out
      text-decoration none

    a:hover, button:hover
      color #BBAAFF